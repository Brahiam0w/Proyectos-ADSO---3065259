<div
    id="start-screen"
    class="fixed inset-0 w-full h-full z-50 flex items-center justify-center transition-opacity duration-700 overflow-hidden"
>
    <!-- Fondo místico -->
    <div
        class="absolute inset-0 bg-cover bg-center brightness-[0.8] contrast-[1.1] saturate-[1.2]"
        style="background-image: url('/img/Elementos/fondo-inicio.png');"
    >
    </div>

    <!-- Viñeta suave para los bordes -->
    <div
        class="absolute inset-0 pointer-events-none"
        style="background: radial-gradient(circle at center, rgba(0,0,0,0) 60%, rgba(0,0,0,0.6) 100%);"
    >
    </div>

    <!-- Oscurecimiento lateral sutil -->
    <div
        class="absolute inset-0 bg-gradient-to-r from-black/30 via-transparent to-black/30 pointer-events-none"
    >
    </div>

    <!-- Brillo dorado suave en el centro -->
    <div
        class="absolute inset-0 pointer-events-none"
        style="background: radial-gradient(circle at center, rgba(255,220,150,0.15) 0%, transparent 70%);"
    >
    </div>

    <!-- Contenido principal -->
    <div class="relative text-center space-y-12 animate-fadeIn z-10">
        <div>
            <h1
                class="text-6xl md:text-8xl font-bold text-yellow-400 tracking-widest drop-shadow-[0_0_50px_rgba(234,179,8,0.8)] font-[Cinzel]"
            >
                BIENVENIDO
            </h1>
        </div>

        <!-- Botón medieval -->
        <button
            id="start-button"
            class="group relative px-20 py-6  bg-cover bg-center border-[3px] border-yellow-600 text-yellow-200 text-3xl md:text-4xl font-bold rounded-xl shadow-[0_0_25px_rgba(234,179,8,0.3)] cursor-pointer transform transition-all duration-300 hover:scale-110 hover:shadow-[0_0_60px_rgba(234,179,8,0.8)] active:scale-95 overflow-hidden font-[Cinzel]"
        >
            <span class="relative z-10 flex items-center gap-4">
                ⚜️ INICIAR ⚜️
            </span>

            <!-- Brillo cruzando -->
            <div
                class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-out"
            >
            </div>

            <!-- Halo mágico -->
            <div
                class="absolute -inset-1 rounded-xl opacity-0 group-hover:opacity-100 blur-md bg-gradient-to-r from-yellow-500/40 via-yellow-300/40 to-yellow-500/40 transition-opacity duration-500"
            >
            </div>

            <!-- Bordes iluminados -->
            <div
                class="absolute inset-0 rounded-xl ring-1 ring-yellow-400/50 group-hover:ring-yellow-200/80 transition-all duration-500"
            >
            </div>
        </button>

        <p
            class="text-gray-300 text-lg mt-8 animate-pulse font-[Cinzel] tracking-widest"
        >
            PRESIONA PARA COMENZAR LA EXPERIENCIA
        </p>
    </div>
</div>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Cinzel:wght@600;700&display=swap");
    @keyframes fadeIn {
			from { opacity: 0; transform: translateY(28px); }
			to { opacity: 1; transform: translateY(0); }
		}
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 1s ease-out;
    }

    .fade-out {
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.8s ease-out;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const startScreen = document.getElementById("start-screen");
        const startButton = document.getElementById("start-button");
        const clickSound = new Audio("");

        if (startButton && startScreen) {
            startButton.addEventListener("click", () => {
                clickSound.currentTime = 0;
                clickSound.play().catch(() => {});
                startScreen.classList.add("fade-out");

                setTimeout(() => {
                    startScreen.style.display = "none";
                    window.dispatchEvent(new Event("startIntroVideo"));
                }, 800);
            });
        }
    });
</script>

---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Welcome from "../components/Welcome.astro";
---
<script src="../scripts/characters.js"></script>

<Layout>
    <Welcome />
    <div class="relative flex min-h-screen w-full flex-col overflow-x-hidden">
        <header
            class="alliance-header sticky top-0 z-50 flex items-center justify-between whitespace-nowrap px-10 py-4 backdrop-blur-md bg-gradient-to-r from-[#00234f]/80 to-[#001428]/80 border-b border-[#ffd700]/10"
        >
            <div class="flex items-center gap-4">
                <h1 class="text-[#ffd700] font-bold text-xl">Alianza</h1>
            </div>
        </header>
        <main
            class="container relative mx-auto px-4 py-12 sm:px-6 lg:px-8 max-w-[1600px]"
        >
            <div class="w-full relative">
                <div class="text-center">
                    <h2 class="text-4xl font-bold text-[#ffd700] mb-4 tracking-wide">La Alianza te necesita</h2>
                    <p class="mx-auto mt-4 max-w-2xl text-lg text-white drop-shadow-lg" style="text-shadow: 0 0 10px rgba(0, 163, 255, 0.5);">
                        Elige a tu campeón para liderar las fuerzas de la Alianza.
                        Cada héroe posee habilidades únicas y poderes extraordinarios
                        que definirán el destino de nuestras tierras.
                    </p>
                </div>
                <div class="mt-12">
                    <!-- Contenedor principal con grid -->
                        <div class="max-w-6xl mx-auto">
                            <h3 class="mb-8 text-3xl font-bold tracking-tight text-[#ffd700] text-center"
                                style="text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);">
                                Campeones de la Alianza
                            </h3>
                            <div class="space-y-8">
                                <!-- Elfos -->
                                <div class="mb-12">
                                    <h4 class="text-xl font-bold text-[#ffd700] mb-6 text-center">Elfos de la Noche</h4>
                                    <div class="grid grid-cols-4 gap-6 max-w-4xl mx-auto">
                                        <div class="character-card relative group cursor-pointer rounded-xl bg-white/5 p-3" data-character="elfo1">
                                            <div class="aspect-square w-full overflow-hidden rounded-xl">
                                                <img alt="Aethel Silvermoon" class="h-[150%] w-full object-cover transition-transform group-hover:scale-110" style="object-position: center 25%; margin-top: -25%;" src="/img/Buenos/Elfo1.png" />
                                            </div>
                                            <div class="absolute inset-x-3 bottom-3 p-2 bg-gradient-to-t from-black/90 to-transparent rounded-lg">
                                                <h4 class="text-sm font-bold text-[#ffd700] truncate">Aethel Silvermoon</h4>
                                                <p class="text-xs text-white/60 truncate">Archimago de Quel'thalas</p>
                                            </div>
                                        </div>
                                        <div class="character-card relative group cursor-pointer rounded-xl bg-white/5 p-3" data-character="elfo2">
                                            <div class="aspect-square w-full overflow-hidden rounded-xl">
                                                <img alt="Lyandra Dawnweaver" class="h-[150%] w-full object-cover transition-transform group-hover:scale-110" style="object-position: center 25%; margin-top: -25%;" src="/img/Buenos/Elfo2.png" />
                                            </div>
                                            <div class="absolute inset-x-3 bottom-3 p-2 bg-gradient-to-t from-black/90 to-transparent rounded-lg">
                                                <h4 class="text-sm font-bold text-[#ffd700] truncate">Lyandra Dawnweaver</h4>
                                                <p class="text-xs text-white/60 truncate">Guardiana del Bosque Eterno</p>
                                            </div>
                                        </div>
                                        <div class="character-card relative group cursor-pointer rounded-xl bg-white/5 p-3" data-character="elfo3">
                                            <div class="aspect-square w-full overflow-hidden rounded-xl">
                                                <img alt="Theron Starwhisper" class="h-[150%] w-full object-cover transition-transform group-hover:scale-110" style="object-position: center 25%; margin-top: -25%;" src="/img/Buenos/Elfo3.png" />
                                            </div>
                                            <div class="absolute inset-x-3 bottom-3 p-2 bg-gradient-to-t from-black/90 to-transparent rounded-lg">
                                                <h4 class="text-sm font-bold text-[#ffd700] truncate">Theron Starwhisper</h4>
                                                <p class="text-xs text-white/60 truncate">Sacerdote de la Luna</p>
                                            </div>
                                        </div>
                                        <div class="character-card relative group cursor-pointer rounded-xl bg-white/5 p-3" data-character="elfo4">
                                            <div class="aspect-square w-full overflow-hidden rounded-xl">
                                                <img alt="Sylvanas Windrunner" class="h-[150%] w-full object-cover transition-transform group-hover:scale-110" style="object-position: center 25%; margin-top: -25%;" src="/img/Buenos/Elfo4.png" />
                                            </div>
                                            <div class="absolute inset-x-3 bottom-3 p-2 bg-gradient-to-t from-black/90 to-transparent rounded-lg">
                                                <h4 class="text-sm font-bold text-[#ffd700] truncate">Sylvanas Windrunner</h4>
                                                <p class="text-xs text-white/60 truncate">Capitana de los Forestales</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Enanos -->
                                <div class="mb-12">
                                    <h4 class="text-xl font-bold text-[#ffd700] mb-6 text-center">Enanos</h4>
                                    <div class="grid grid-cols-4 gap-6 max-w-4xl mx-auto">
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="enano1">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Thorin Steelbeard" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Enano1.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Thorin Steelbeard</h4>
                                                <p class="mt-1 text-sm text-white/60">Señor de la Forja</p>
                                            </div>
                                        </div>
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="enano2">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Moira Thaurissan" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Enano2.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Moira Thaurissan</h4>
                                                <p class="mt-1 text-sm text-white/60">Reina Regente</p>
                                            </div>
                                        </div>
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="enano3">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Bromm Ironfist" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Enano3.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Bromm Ironfist</h4>
                                                <p class="mt-1 text-sm text-white/60">Maestro de Rifles</p>
                                            </div>
                                        </div>
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="enano4">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Dagmar Stoneheart" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Enano4.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Dagmar Stoneheart</h4>
                                                <p class="mt-1 text-sm text-white/60">Guardián de las Runas</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Humanos -->
                                <div class="mb-12">
                                    <h4 class="text-xl font-bold text-[#ffd700] mb-6 text-center">Humanos</h4>
                                    <div class="grid grid-cols-4 gap-6 max-w-4xl mx-auto">
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="humano1">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Marcus Shadowblade" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Humano1.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Marcus Shadowblade</h4>
                                                <p class="mt-1 text-sm text-white/60">Maestro Asesino</p>
                                            </div>
                                        </div>
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="humano2">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Katarina Lightbringer" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Humano2.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Katarina Lightbringer</h4>
                                                <p class="mt-1 text-sm text-white/60">Alta Inquisidora</p>
                                            </div>
                                        </div>
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="humano3">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Gabriel Brightweave" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Humano3.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Gabriel Brightweave</h4>
                                                <p class="mt-1 text-sm text-white/60">Archimago de Dalaran</p>
                                            </div>
                                        </div>
                                        <div class="character-card group cursor-pointer rounded-xl bg-white/5 p-4" data-character="humano4">
                                            <div class="aspect-[3/4] w-full overflow-hidden rounded-lg">
                                                <img alt="Elena Stormwind" class="h-full w-full object-cover object-center transition-transform group-hover:scale-110" src="/img/Buenos/Humano4.png" />
                                            </div>
                                            <div class="mt-4">
                                                <h4 class="text-base font-bold text-[#ffd700]">Elena Stormwind</h4>
                                                <p class="mt-1 text-sm text-white/60">Capitana de la Guardia</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Modal de detalles del personaje -->
                        <div id="characterModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
                            <div class="relative w-full max-w-4xl bg-gradient-to-br from-[#00234f]/90 to-[#00132a]/90 rounded-xl border border-[#ffd700]/20 shadow-xl shadow-[#00234f]/30 mx-4" style="height: 32rem;">
                                <div class="grid grid-cols-2 h-full">
                                    <!-- Columna izquierda con imagen -->
                                    <div class="relative overflow-hidden rounded-l-xl bg-gradient-to-br from-[#001428] to-[#00234f] h-full">
                                        <img id="panelPortrait" src="" alt="Portrait" class="object-contain w-full h-full" style="object-position: center;" />
                                        <!-- Botón de cerrar -->
                                        <button id="closeModal" class="absolute top-4 right-4 p-2 hover:bg-black/20 rounded-lg transition-colors z-30">
                                            <svg class="w-6 h-6 text-white/80 hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                        </button>
                                    </div>
                                    
                                    <!-- Columna derecha con información -->
                                    <div class="flex flex-col h-full">
                                        <!-- Encabezado -->
                                        <div class="p-4 border-b border-[#ffd700]/10">
                                            <h2 id="panelName" class="text-2xl font-bold text-[#ffd700] drop-shadow-lg mb-1">Selecciona un campeón</h2>
                                            <p id="panelTitle" class="text-base text-white/90 italic leading-snug">Título</p>
                                        </div>
                                        
                                        <!-- Contenido principal -->
                                        <div class="p-4 flex flex-col gap-4">
                                            <!-- Historia con borde decorativo -->
                                            <div class="relative bg-[#001428]/30 p-4 rounded-xl border-l-4 border-[#ffd700]/30">
                                                <h3 class="text-base font-semibold text-[#ffd700] mb-2">Historia</h3>
                                                <p id="panelLore" class="text-sm text-white/80 leading-relaxed">Las características del personaje aparecerán aquí al seleccionarlo.</p>
                                            </div>

                                            <!-- Habilidades con scroll -->
                                            <div class="bg-[#001428]/30 rounded-xl border-l-4 border-[#ffd700]/30 flex flex-col">
                                                <div class="p-4">
                                                    <h3 class="text-base font-semibold text-[#ffd700] mb-2">Habilidades</h3>
                                                    <div id="panelAbilities" class="grid grid-cols-1 gap-3 max-h-[8rem] overflow-y-auto pr-2 custom-scrollbar">
                                                        <!-- Las habilidades se insertarán aquí dinámicamente -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Botón de selección -->
                                        <div class="mt-auto p-4 bg-[#001428]/50 border-t border-[#ffd700]/10 rounded-br-xl">
                                            <button id="panelSelect" class="w-full py-3 px-6 bg-gradient-to-r from-[#ffd700] to-[#ffc000] rounded-lg text-lg font-bold text-[#00234f] transition-all hover:shadow-lg hover:shadow-[#ffd700]/20 hover:scale-[1.02]">
                                                ¡Por la Alianza!
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>
        <div class="heroic-showcase" id="heroicShowcase">
            <div class="heroic-showcase-content">
                <div class="character-portrait-full">
                    <img
                        alt="Selected Character Portrait"
                        id="showcasePortrait"
                        src=""
                    />
                </div>
                <div class="character-details-full">
                    <h2
                        class="text-5xl font-bold mb-4 text-primary"
                        id="showcaseName"
                    >
                    </h2>
                    <p
                        class="text-lg text-white/80 leading-relaxed mb-6"
                        id="showcaseLore"
                    >
                    </p>
                    <button
                        class="flex min-w-[150px] cursor-pointer items-center justify-center overflow-hidden rounded-lg bg-primary px-6 py-2 text-base font-bold text-white shadow-lg shadow-primary/30 transition-all hover:scale-105 hover:shadow-primary/50 self-start"
                        id="closeShowcase"
                    >
                        <span class="truncate">Return</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</Layout>
